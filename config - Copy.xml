<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.k12.RufoNGabrilloJr" version="4.1">
  <name>k12-mobile</name>
  <description>K12 gradebook is a multi-platform grade computation software.</description>
  <author href="https://github.com/jrGabrillo/" email="rufo.gabrillo@gmail.com">Rufo N. Gabrillo Jr.</author>
  <content src="index.html"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <icon src="icon.png"/>
  <gap:splash src="icon.png" gap:platform="android" gap:qualifier="port-ldpi"/>
  <gap:splash src="icon.png" gap:platform="android" gap:qualifier="port-mdpi"/>
  <gap:splash src="icon.png" gap:platform="android" gap:qualifier="port-hdpi"/>
  <gap:splash src="icon.png" gap:platform="android" gap:qualifier="port-xhdpi"/>
  <access origin="*"/>
  <plugin name="cordova-plugin-whitelist" version="1"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>